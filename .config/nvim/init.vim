source ~/.config/nvim/plugins.vim  

" vim basic config
set modifiable 
set number
set nocompatible
set expandtab
set autoindent
set shiftwidth=4
set mouse=a
syntax on
set cursorline
set encoding=UTF-8
set background=dark
colorscheme onedark
set splitbelow
set splitright
set noswapfile
set termguicolors
set t_BE=
set clipboard+=unnamedplus

" add mappings
source ~/.config/nvim/mappings.vim

" add addtional setting 
source ~/.config/nvim/addons.vim
